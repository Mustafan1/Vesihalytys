<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:textSize="30sp"
        android:textColor="#06DCF3"
        android:text="Add water" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/arvo_2"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:text="0 ML"
            android:textColor="@color/black"
            android:textSize="25sp"
            />
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:scaleY="7"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="2dp"
            android:drawableTop="@drawable/ic_minus"
            android:text="Button"
            app:backgroundTint="#FAF8F8" />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/ic_plussa"
            android:text="Button"
            app:backgroundTint="#FFFFFF" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="130dp"
        android:layout_marginTop="5dp"
        android:layout_height="130dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_plus"
            android:text="Add water"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:backgroundTint="#AEE1F8"
            tools:ignore="RtlCompat" />



    </FrameLayout>


</LinearLayout>
